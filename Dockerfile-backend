#syntax=docker/dockerfile:1.2

FROM debian:10.6 as base
RUN apt-get update && apt-get install -y \
  libgmp10 \
  libpq-dev

FROM base as stack-base
RUN apt-get update && apt-get install -y curl
RUN curl -sSL https://get.haskellstack.org/ | sh
ENV PATH="/root/.local/bin:${PATH}"
COPY backend/stack.yaml .
COPY backend/package.yaml .
RUN --mount=type=cache,target=/root/.stack --mount=type=cache,target=.stack-work stack build --only-dependencies 

FROM stack-base as dev
RUN --mount=type=cache,target=/root/.stack --mount=type=cache,target=.stack-work stack install ghcid
RUN apt-get update && apt-get install -y rsync
RUN --mount=type=cache,target=/root/.stack \
    cd /root/.stack && \
    find . -name "*.sqlite3" > /tmp/rsync.includes && \
    find pantry -not -name "*.*tar*" >> /tmp/rsync.includes && \
    find programs -not -name "*.tar*" >> /tmp/rsync.includes && \
    find snapshots >> /tmp/rsync.includes
RUN --mount=type=cache,target=/root/.stack rsync -a --no-perms --files-from=/tmp/rsync.includes /root/.stack /root/.stack-cache
RUN rsync -a /root/.stack-cache/* /root/.stack
VOLUME /var/hs-forum
WORKDIR /var/hs-forum
CMD ["bash", "run-dev.sh"]

FROM stack-base as builder
COPY backend /var/hs-forum
WORKDIR /var/hs-forum
RUN --mount=type=cache,target=/root/.stack --mount=type=cache,target=.stack-work stack install --allow-different-user .

FROM base as prod
ENV PATH="/root/.local/bin:${PATH}"
COPY --from=builder /root/.local/bin /root/.local/bin
COPY backend/config.yaml . 
CMD ["/root/.local/bin/hs-forum-exe"]
